<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string><%= @name %>.dnsmasq</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>Redirects *.<%= @name %> DNS requests to <%= @nameserver %>.</string>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= scope.lookupvar "::dnsmasq::dnsmasq" %></string>
      <string>--conf-file=<%= scope.lookupvar "::dnsmasq::configfile" %></string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <true />

    <key>WorkingDirectory</key>
    <string><%= scope.lookupvar "::dnsmasq::datadir" %></string>

    <key>StandardErrorPath</key>
    <string><%= scope.lookupvar "::dnsmasq::logfile" %></string>

    <key>StandardOutPath</key>
    <string><%= scope.lookupvar "::dnsmasq::logfile" %></string>
  </dict>
</plist>
